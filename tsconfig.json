{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "noEmitOnError": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "swc": true
  },
  "paths": {
    "*": ["src/types/environment.d.ts"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
